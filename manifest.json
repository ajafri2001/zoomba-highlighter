{
  "manifest_version": 3,
  "name": "Zoomba Highlighter",
  "description": "Zoomba Syntax Highlighter for GitHub and GitLab",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "css": [
        "themes/base16-dark.css"
      ],
      "js": [
        "codemirror-lib.js",
        "zoomba.js",
        "github.js"
      ]
    },
    {
      "matches": [
        "https://gitlab.com/*"
      ],
      "css": [
        "themes/xq-light.css"
      ],
      "js": [
        "codemirror-lib.js",
        "zoomba.js",
        "gitlab.js"
      ]
    }
  ]
}
